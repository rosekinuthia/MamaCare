<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mamacare.mamacare">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:name=".firebase"
        android:allowBackup="true"
        android:icon="@drawable/mamacare"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".addBaby"
            android:label="@string/title_activity_add_baby"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".VaccineList"
            android:label="@string/title_activity_vaccine_list"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".settings"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".news"
            android:label="@string/title_activity_news" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Faclity" />
        <activity android:name=".PregnancyActivity"></activity>
    </application>

</manifest>